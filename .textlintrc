{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [
        ".mdx"
      ]
    }
  },
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [
          "."
        ],
        "allowEmojiAtEnd": true
      },
      "ja-no-successive-word": {
        "allow": [
          "/ほど/i",
          "/では/i"
        ]
      },
      "no-exclamation-question-mark": false,
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "",
        "strict": false
      }
    }
  }
}
