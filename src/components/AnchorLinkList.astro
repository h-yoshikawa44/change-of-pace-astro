---
import type { MarkdownHeading } from 'astro';
import AnchorLinkListItem from '@/components/AnchorLinkListItem.astro';

type Props = {
  markdownHeadings: MarkdownHeading[];
};

const { markdownHeadings } = Astro.props;
---

<ul class="mt-2">
  {
    markdownHeadings.map((heading) => (
      <AnchorLinkListItem href={`#${heading.slug}`}>{`${'#'.repeat(
        heading.depth,
      )} ${heading.text}`}</AnchorLinkListItem>
    ))
  }
</ul>
