---
const GOOGLE_ADSENSE_PUBLISHER_ID = import.meta.env.GOOGLE_ADSENSE_PUBLISHER_ID;
const GOOGLE_ADSENSE_SLOT = import.meta.env.GOOGLE_ADSENSE_SLOT;
---

<!-- レスポンシブ広告 -->
<ins
  class="adsbygoogle h-[280px] w-full md:h-[250px]"
  style="display:inline-block"
  data-ad-client=`${GOOGLE_ADSENSE_PUBLISHER_ID}`
  data-ad-slot=`${GOOGLE_ADSENSE_SLOT}`
  data-ad-format="rectangle, horizontal"
  data-full-width-responsive="false"></ins>
<script type="text/javascript">
  // eslint-disable-next-line no-undef
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>
