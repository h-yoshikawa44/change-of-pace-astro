---
import { MENU_TYPE_LIST } from '@/consts';

type Props = {
  type: (typeof MENU_TYPE_LIST)[number];
};

const { type } = Astro.props;
---

<div id=`${type}-menu` class="hidden">
  <div
    id=`${type}-menu-backdrop`
    class="fixed bottom-0 left-0 right-0 top-0 z-1000 backdrop-blur-sm"
  >
  </div>
  <div
    class="fixed right-4 top-4 z-1200 max-h-[calc(100vh_-_32px)] max-w-xs w-full overflow-y-auto rounded-2 bg-white py-4 text-slate-800 shadow-md"
  >
    <button
      id=`close-${type}-menu-button`
      title="メニューを閉じる"
      class="ml-auto block px4 py-1"
      ><span class="i-system-uicons:cross block text-2xl"></span></button
    >
    <slot />
  </div>
</div>
