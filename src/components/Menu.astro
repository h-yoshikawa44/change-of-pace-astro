---
import NavLink from '@/components/NavLink.astro';
import { CATEGORY_LIST, CATEGORY_MAP } from '@/consts';
---

<div id="menu" class="hidden">
  <div
    id="menu-backdrop"
    class="fixed bottom-0 left-0 right-0 top-0 z-1000 backdrop-blur-sm"
  >
  </div>
  <div
    class="fixed right-4 top-4 z-1200 max-w-xs w-full rounded-2 bg-white py-4 text-slate-800 shadow-md"
  >
    <button id="close-menu-button" title="閉じる" class="ml-auto block px4 py-1"
      ><span class="i-system-uicons:cross block text-2xl"></span></button
    >
    <nav class="grid gap-y-4">
      <ul>
        <NavLink href="/">Home</NavLink>
        <NavLink href="/about">About</NavLink>
      </ul>
      <div>
        <p class="px-4 font-600">Blog Category List</p>
        <ul>
          {
            CATEGORY_LIST.map((category) => (
              <NavLink href={`/${category}/1`}>
                {CATEGORY_MAP[category]}
              </NavLink>
            ))
          }
        </ul>
      </div>
      <ul>
        <NavLink href="/tags">タグ一覧</NavLink>
        <NavLink href="/form">お問い合わせ</NavLink>
        <NavLink href="/policy">プライバシーポリシー</NavLink>
      </ul>
    </nav>
  </div>
</div>
