---
import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';
import PostPagingList from '@/features/post/PostPagingList.astro';
import { CATEGORY_MAP, RSS_LINKS } from '@/consts';

type Props = {
  category: keyof typeof CATEGORY_MAP;
  page: Page<CollectionEntry<'posts'>>;
};

const { category, page } = Astro.props;
---

<PostPagingList
  headTitle={`${CATEGORY_MAP[category]} 記事一覧 - ${page.currentPage}`}
  pageTitle={`${CATEGORY_MAP[category]} 記事一覧 - ${page.currentPage}`}
  rss={RSS_LINKS[category]}
  postList={page.data}
  previousUrl={page.url.prev}
  nextUrl={page.url.next}
/>
