{
  "name": "change-of-pace",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint-check": "npm run lint:eslint && npm run lint:stylelint && npm run check:prettier",
    "lint:eslint": "eslint \"./src/**/*.{js,jsx,ts,tsx,astro}\"",
    "lint:stylelint": "stylelint \"./src/**/*.scss\"",
    "lint:textlint:full": "textlint --cache \"src/content/**/*.{md,mdx}\" -f pretty-error",
    "check:prettier": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,html,json,astro}\"",
    "fix": "npm run fix:eslint && npm run fix:stylelint && npm run fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint --fix",
    "fix:textlint:full": "textlint --cache \"src/content/**/*.{md,mdx}\" --fix",
    "fix:prettier": "npm run check:prettier -- --write",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.18.3",
    "@astrojs/partytown": "^1.2.3",
    "@astrojs/rss": "^2.3.2",
    "@astrojs/sitemap": "^1.2.2",
    "@iconify-json/logos": "^1.1.25",
    "@iconify-json/system-uicons": "^1.1.8",
    "@iconify-json/teenyicons": "^1.1.5",
    "@unocss/reset": "^0.51.4",
    "astro": "^2.2.1",
    "cheerio": "^1.0.0-rc.12",
    "markdown-it": "^13.0.1",
    "rehype-autolink-headings": "^6.1.1",
    "remark-breaks": "^3.0.3",
    "remark-flexible-code-titles": "^1.1.3",
    "sanitize-html": "^2.10.0",
    "sass": "^1.62.1",
    "wicg-inert": "^3.1.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/mdast": "^3.0.11",
    "@types/sanitize-html": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@unocss/astro": "^0.50.8",
    "@unocss/autocomplete": "^0.50.8",
    "@unocss/eslint-config": "^0.50.8",
    "eslint": "^8.38.0",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prettier-plugin-astro": "^0.8.0",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.6.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "textlint": "^13.3.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "unocss": "^0.50.8"
  },
  "volta": {
    "node": "18.15.0",
    "npm": "8.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "prepare-commit-msg": "./git-hook/prepare-commit-msg \"$@\""
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,astro}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "src/**/*.scss": [
      "prettier --write --loglevel=error",
      "stylelint --fix --quiet"
    ],
    "./**/*.{html,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}
