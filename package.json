{
  "name": "change-of-pace",
  "type": "module",
  "version": "5.1.2",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint-check": "npm run lint:eslint && npm run lint:stylelint && npm run check:prettier",
    "lint:eslint": "eslint \"./src/**/*.{js,jsx,ts,tsx,astro}\"",
    "lint:stylelint": "stylelint \"./src/**/*.scss\"",
    "lint:textlint:full": "textlint --cache \"src/content/**/*.{md,mdx}\" -f pretty-error",
    "check:prettier": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,html,json,astro}\"",
    "fix": "npm run fix:eslint && npm run fix:stylelint && npm run fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint --fix",
    "fix:textlint:full": "textlint --cache \"src/content/**/*.{md,mdx}\" --fix",
    "fix:prettier": "npm run check:prettier -- --write",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'"
  },
  "dependencies": {
    "@astrojs/mdx": "^1.1.5",
    "@astrojs/partytown": "^2.0.2",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.3",
    "@iconify-json/logos": "^1.1.35",
    "@iconify-json/system-uicons": "^1.1.9",
    "@iconify-json/teenyicons": "^1.1.6",
    "@unocss/reset": "^0.53.4",
    "astro": "^3.5.5",
    "cheerio": "^1.0.0-rc.12",
    "markdown-it": "^13.0.1",
    "rehype-autolink-headings": "^6.1.1",
    "remark-breaks": "^3.0.3",
    "remark-flexible-code-titles": "^1.1.3",
    "sanitize-html": "^2.11.0",
    "sass": "^1.66.1",
    "wicg-inert": "^3.1.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/mdast": "^3.0.11",
    "@types/sanitize-html": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@unocss/astro": "^0.55.7",
    "@unocss/autocomplete": "^0.55.7",
    "@unocss/eslint-config": "^0.55.7",
    "eslint": "^8.48.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.1",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "textlint": "^13.3.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "unocss": "^0.56.1"
  },
  "volta": {
    "node": "20.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "prepare-commit-msg": "./.githooks/prepare-commit-msg \"$@\""
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,astro}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "src/**/*.scss": [
      "prettier --write --loglevel=error",
      "stylelint --fix --quiet"
    ],
    "./**/*.{html,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}
